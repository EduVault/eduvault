{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "ES2020",
    "lib": ["es2015", "es2016", "es2017", "ESNext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}