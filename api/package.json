{
  "name": "api",
  "version": "1.0.0",
  "description": "eduvault auth server",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "TS_NODE_PROJECT='./tsconfig.json' ts-node-dev --inspect --poll --respawn ./src src/index.ts",
    "start": "node dist/",
    "watch": "tsc -p ./ -w",
    "build:server": "tsc -p ./",
    "build": "run-s clean build:server"
  },
  "author": "Jacob Cohen-Rosenthal",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@textile/crypto": "^2.1.1",
    "@textile/hub": "4.1.0",
    "@textile/threaddb": "^0.0.5",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "core-js-bundle": "^3.8.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "emittery": "^0.8.0",
    "google-protobuf": "^3.2.0",
    "ip": "^1.1.5",
    "isomorphic-ws": "^4.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-cookie": "^1.0.0",
    "koa-csrf": "^3.0.8",
    "koa-helmet": "^6.0.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-response2": "^1.0.4",
    "koa-router": "^10.0.0",
    "koa-session": "^6.0.0",
    "koa-sslify": "^4.0.3",
    "koa-validate": "^1.0.7",
    "koa-websocket": "^6.0.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.21",
    "node-fetch": "^2.6.1",
    "openapi-types": "^7.0.1",
    "openapi-validator-middleware": "^3.0.0",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.10.2",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.0.1",
    "@types/glob": "^7.1.3",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-cookie": "^1.0.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.4.1",
    "@types/koa-session": "^5.10.2",
    "@types/koa-sslify": "^4.0.1",
    "@types/koa-websocket": "^5.0.4",
    "@types/koa__cors": "^3.0.1",
    "@types/lodash": "^4.14.153",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.9",
    "@types/passport": "^1.0.3",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/coverage/"
    ]
  }
}
