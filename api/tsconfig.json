{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "skipLibCheck": true // this will skip all .d.ts files, but had to add because typescript wasn't ignoring node_modules
  },

  "exclude": ["**/node_modules", "node_modules", "typings"]
}
